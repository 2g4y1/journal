<!DOCTYPE html>
<html>
  <head>
    <title>PrivateJournal</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body class="container">
    <% if logged_in %>
      <div class="row">
        <%= link_to "Leave", sessions_path, method: :delete %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
